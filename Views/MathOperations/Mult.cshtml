        <p><input type="number" name="numberOne" id="numberOne" required></p>
        <label for="numberTwo">Número 2</label>
        <p><input type="number" name="numberTwo" id="numberTwo" required></p>
        <button type="submit">Enviar</button>
    </form>
</div>