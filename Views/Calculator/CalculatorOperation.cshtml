@{
    ViewData["Title"] = "Calculator Operation";
}

<div class="text-center">
    <h1>Calculadora</h1><br>
    <p>Utilize o formulário abaixo para passar os dados à sua calculadora.</p><br><br>

    <form action="CalculatorOperationResult" method="post">
        <label for="numberOne">Número 1</label>
        <p><input type="number" name="numberOne" id="numberOne" required></p>
        <label for="numberTwo">Número 2</label>
        <p><input type="number" name="numberTwo" id="numberTwo" required></p>
        <label for="operator"> Operações: </label>
        <p><select name="calculator" id="operator">
            <option value="sum"> Soma </option>
            <option value="sub"> Subtração </option>
            <option value="mult"> Multiplicação </option>
            <option value="div"> Divisão </option>
        </select></p>
        <button type="submit">Enviar</button>
    </form>
</div>